@page "/products/lamborghini"
@using WebShopShared.Interfaces
@using WebShopShared.Models
@using WebShopFrontend.Components.ProductComponents


<div class="product-container">
	<LoadSingleProduct OnProductLoaded="HandleProductLoaded" Id="1"/>

</div>

@code {
	private ProductDto? _product;

	private void HandleProductLoaded(ProductDto fetchedProduct)
	{
		_product = fetchedProduct;
		StateHasChanged();
	}
}
